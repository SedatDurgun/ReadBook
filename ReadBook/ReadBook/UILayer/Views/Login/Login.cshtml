@using ApplicationLayer.Models.DTO_s
@model LoginDTO

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            background-image: url('https://cdn1.ntv.com.tr/gorsel/CDmFqIMgJkOtqCz5JZUC7Q.jpg?width=1000&mode=crop&scale=both');
            ; /* Arka plan rengi */
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center; 
        }

        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }

        .login-box {
          backdrop-filter:blur(5px);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .title-box {
        
            color:coral;
            width:50%
         }

        .table {
            width:100%;
            margin:0;
            padding:0;
        }

        .table th {
            font-size:1.5em;
            padding-bottom:10px;
        }

        .form-control {
            width:100%;
            padding:10px;
            margin:10px 0;
            border:1px solid #ccc;
            border-radius:5px;
            transition: border-color 0.3s;
        }

        .form-control:focus {
            border-color:azure; /* Odaklanma efekti */
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            background-color:antiquewhite;
            color:chocolate;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
        }

        .btn-primary:hover {
            background-color:blanchedalmond; /* Hover efekti */
            transform: scale(1.05);
        }

        .btn-primary:active {
            transform: scale(0.95); /* Tıklama efekti */
        }

        .register-box {
            width:100%;
            padding:10%;
            border:none;
            border-radius:5px;
            cursor:pointer;
            background-color: antiquewhite;
            color: chocolate;
        }
        .register-box:hover
        {
            background-color:blanchedalmond;
            transform: scale(1.05);

        }
        .register-box:active
        {
            transform: scale(0.95);
        }

        a {
            color:palegreen
            text-decoration: none;
            transition: color 0.3s;
        }

        a:hover {
            color:sandybrown;
            transform: scale(1.05);
            transition: color 0.3s;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color:maroon
        }

        th, td {
            padding: 10px;
        }

        td {
            vertical-align: middle; @* iç içe geçmiş veya yan yana dizilmiş öğelerin içindeki içeriğin dikey konumunu belirlemek için kullanılır.*@
        }

/*         .table tr:nth-child(even) {
            background-color:burlywood; /* Alternatif satır rengi */
        } */
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <form method="post" asp-action="Login">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="title-box" colspan="2">Welcome</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="email-box">
                            <td><label asp-for="Email" required ></label></td>
                            <td><input asp-for="Email" type="email" class="form-control" required /></td>
                        </tr>
                        <tr class="password-box">
                            <td><label asp-for="Password"></label></td>
                            <td><input asp-for="Password" type="password" class="form-control" required /></td>
                        </tr>
                        <tr>
                            <td colspan="2"><input type="submit" value="Login" class="btn btn-primary"  /></td>
                        </tr>
                        <tr>
                            <td class="register-box" colspan="2" ><a asp-action="Register">Let's Register</a></td>
                        </tr>
                        <tr>
                            <td colspan="2"><div asp-validation-summary="All"></div></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>

    <!-- Script kodları burada eklenebilir -->
    <script>
        document.querySelector('form').addEventListener('submit', function (event) {
            var email = document.querySelector('input[type="email"]').value;
            var password = document.querySelector('input[type="password"]').value;

            if (!email || !password) {
                event.preventDefault(); // Formun gönderilmesini engeller
                alert('Email ve şifre alanları boş bırakılamaz!');
            }
        });
    </script>
</body>
</html>
