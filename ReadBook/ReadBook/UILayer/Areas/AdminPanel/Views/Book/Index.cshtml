@using ApplicationLayer.Models.ViewModels
@model IEnumerable<BookVM>

<!DOCTYPE html >
<html lang="en">

    <head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Tüm Kitaplar</title>

</head>
    <body>
        <div class="row row-cols-3 ">

        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card text-center">
                    <img src="~/BookPictures/">@item.BookPicture" />
                    <div class="card-body">
                        <h4 class="card-title">@item.BookName</h4>
                        <p class="card-text">@item.BookSummary</p>
                        <p class="auth-name">@item.AuthorName</p>
                        <span class="card-price">@item.BookPrice </span>
                    </div>
                </div>
            </div>
        }

    </div>


    </body>
</html>

