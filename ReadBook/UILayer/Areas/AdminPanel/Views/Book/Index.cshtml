@using ApplicationLayer.Models.ViewModels
@model IEnumerable<BookVM>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tüm Kitaplar</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <style>
        .card-img-top {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .card-price {
            display: block;
            margin-top: 10px;
            font-weight: bold;
            font-size: 1.2em;
            color: #d9534f; 
        }

        .auth-name {
            margin-bottom: 10px;
            font-size: 1em;
            color: #777;
        }

        .btn-outline-dark {
            display: inline-block;
            width: 100px;
            border: 2px solid #343a40; 
            background-color: transparent;
            color: #343a40;
            text-align: center;
            padding: 5px 10px;
            transition: background-color 0.3s, color 0.3s;
            text-decoration: none;
            margin-right: 10px;
            float: left;
        }

            .btn-outline-dark:hover {
                background-color: #343a40;
                color: white;
            }

        .btn-outline-danger {
            display: inline-block;
            width: 100px;
            border: 2px solid #dc3545; 
            background-color: transparent;
            color: #dc3545;
            text-align: center;
            padding: 5px 10px;
            transition: background-color 0.3s, color 0.3s;
            text-decoration: none;
            margin-right: 10px;
            float:right;


        }

            .btn-outline-danger:hover {
                background-color: #dc3545; 
                color: white; 
            }
    </style>
</head>
<body>
    <a asp-action="CreateBook" class="btn btn-outline-danger">Kitap Ekle</a>
    <div class="row row-cols-3">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card text-center">
                    <img src="~/BookPictures/@item.BookPicture" class="card-img-top" alt="Book Image">
                    <div class="card-body">
                        <h4 class="card-title">@item.BookName</h4>
                        <p class="card-text">@item.BookSummary</p>
                        <p class="auth-name">@item.AuthorName</p>
                        <span class="card-price">@item.BookPrice</span>
                        <a asp-action="UpdateBook" class="btn btn-outline-dark">Update</a>
                        <form method="post" asp-action="DeleteBook">
                            <input type="hidden" value="@item.BookID" name="id" />
                            <input type="submit" value="Delete" class="btn btn-outline-danger" />
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
